@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control" onchange="this.form.submit()"></select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="BrandId"></label>
                <select asp-for="BrandId" asp-items="Model.Brands" class="form-control" onchange="this.form.submit()"></select>
            </div>
        </div>
    </div>
</form>

<div class="row">

    @foreach (var product in Model.Products)
    {
        <partial name="_ProductPartial" model="product" />
    }
</div>

<div>
    Number of Pages: @Model.PaginationInfo.TotalPages
    <br />
    Number of Current Page: @Model.PaginationInfo.ActualPage
    <br />
    Number of Products: @Model.PaginationInfo.TotalItems
    <br />
    Number of Products on Page: @Model.PaginationInfo.ItemsOnPage
</div>